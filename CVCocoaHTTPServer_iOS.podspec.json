{
  "name": "CVCocoaHTTPServer",
  "version": "1.0",
  "license": "BSD",
  "summary": "CocoaHTTPServer is a small, lightweight, embeddable HTTP server for or iOS applications.",
  "homepage": "https://github.com/mikeshep/CVCocoaHTTPServer_ios",
  "authors": {
    "Miguel Olmedo": "miguel.olmedo@ironbit.com.mx"
  },
  "source": {
    "git": "https://github.com/mikeshep/CVCocoaHTTPServer_ios.git",
    "tag": "1.0"
  },
  "source_files": "{Core,Extensions}/**/*.{h,m}",
  "requires_arc": true,
  "platforms": {
    "ios": "8.0",
  },
  "ios": {
    "frameworks": [
      "CFNetwork",
      "Security"
    ]
  },
  "osx": {
    "frameworks": [
      "CoreServices",
      "Security"
    ]
  },
  "libraries": "xml2",
  "xcconfig": {
    "HEADER_SEARCH_PATHS": "\"$(SDKROOT)/usr/include/libxml2\""
  },
  "dependencies": {
    "CocoaAsyncSocket": [

    ],
    "CocoaLumberjack": [
      "~> 2.4.0"
    ]
  }
}
